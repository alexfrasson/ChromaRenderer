build --compilation_mode=opt
build --spawn_strategy=local

build:windows --cxxopt=/MD
build:windows --cxxopt=/WX
build:windows --cxxopt=/experimental:external
build:windows --cxxopt=/external:Ithird-party
build:windows --cxxopt=/external:W0
build:windows --per_file_copt=chroma-renderer/.*@/W4
build:windows --per_file_copt=third-party/.*@/W0
build:windows --per_file_copt=external/.*@/W0
build:windows --cxxopt=/std:c++17
build:windows --experimental_enable_runfiles

build:windows_dbg --config=windows
build:windows_dbg --compilation_mode=dbg
build:windows_dbg --cxxopt=/MDd

build:linux --client_env=CC=/usr/bin/gcc-8
build:linux --client_env=CXX=/usr/bin/g++-8
build:linux --copt=-Werror
build:linux --copt=-Wall
build:linux --copt=-Wpedantic
build:linux --copt=-Wextra
build:linux --copt=-Wconversion
build:linux --copt=-Wfloat-conversion
build:linux --copt=-Wfloat-equal
build:linux --copt=-Wsign-compare
build:linux --copt=-Wshadow
build:linux --copt=-Wno-deprecated-declarations
build:linux --copt=-fdiagnostics-color=always
build:linux --per_file_copt=third-party/.*@-w
build:linux --per_file_copt=external/.*@-w
build:linux --cxxopt=-std=c++17
build:linux --cxxopt=-mavx
build:linux --linkopt=-lstdc++fs

build:linux_dbg --config=linux
build:linux_dbg --compilation_mode=dbg

build:clang_tidy --config=linux
build:clang_tidy --cxxopt=-Wno-pragma-once-outside-header
build:clang_tidy --cxxopt=--language=c++
build:clang_tidy --aspects //third-party/clang-tidy:aspect.bzl%print_aspect --output_groups=report

test --test_output=errors
test --test_arg=--gtest_color=yes